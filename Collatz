using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Switch
{
    class Program
    {
        static void Main(string[] args)
        {
            //COLLATZ
            int s = 0;
            Console.WriteLine("Pivote");
            s = int.Parse(Console.ReadLine());
            while (s != 1)
            {
                if (s % 2 == 0)
                {
                    s = s / 2;
                    Console.WriteLine(+s);
                }
                else
                    s = s * 3 + 1;
            }
            Console.ReadKey();
        }
    }
}
